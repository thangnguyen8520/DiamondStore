@page
@model DiamondStore.Pages.Admin.AdminJewelryModel
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Admin Jewelry";
}

<main class="h-full pb-16 overflow-y-auto">
    <div class="container grid px-6 mx-auto">
        <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
            Jewelry List
        </h2>
        <a href="/Admin/AddJewelry" class="btn btn-primary mb-4">Create New Jewelry</a>
        <div class="w-full overflow-hidden rounded-lg shadow-xs">
            <div class="w-full overflow-x-auto">
                <table class="w-full whitespace-no-wrap">
                    <thead>
                        <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
                            <th class="px-4 py-3">Name</th>
                            <th class="px-4 py-3">Jewelry Price</th>
                            <th class="px-4 py-3">Total Price</th>
                            <th class="px-4 py-3">Material</th>
                            <th class="px-4 py-3">Type</th>
                            <th class="px-4 py-3">Main Diamond</th>
                            <th class="px-4 py-3">Secondary Diamonds</th>
                            <th class="px-4 py-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
                        @foreach (var jewelry in Model.Jewelries)
                        {
                            <tr class="text-gray-700 dark:text-gray-400">
                                <td class="px-4 py-3">
                                    <a href="/Admin/DetailJewelry?id=@jewelry.JewelryId" class="text-blue-500 hover:text-blue-700">@jewelry.JewelryName</a>
                                </td>
                                <td class="px-4 py-3">@jewelry.JewelryPrice.ToString("N0") ₫</td>
                                <td class="px-4 py-3">@jewelry.TotalPrice.ToString("N0") ₫</td>
                                <td class="px-4 py-3">@jewelry.JewelryMaterialName</td>
                                <td class="px-4 py-3">@jewelry.JewelryTypeName</td>
                                <td class="px-4 py-3">@jewelry.MainDiamondName</td>
                                <td class="px-4 py-3">@string.Join(", ", jewelry.SecondaryDiamondsNames)</td>
                                <td class="px-4 py-3">
                                    <a href="/Admin/EditJewelry?id=@jewelry.JewelryId" class="text-blue-500 hover:text-blue-700">Edit</a>
                                    <a href="/Admin/DeleteJewelry?id=@jewelry.JewelryId" class="text-red-500 hover:text-red-700 ml-4">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
