@page
@model DiamondStoreService.Models.UserDTO

<form method="post" asp-page-handler="Delete">
    <div class="p-6">
        <h3 class="text-lg font-semibold">Delete User</h3>
        <div class="mt-4">
            <input type="hidden" name="Id" value="@Model.Id" />
            <p>Are you sure you want to delete the user <strong>@Model.FullName</strong>?</p>
        </div>
        <div class="mt-4 flex justify-end">
            <button type="button" class="bg-gray-500 text-white px-4 py-2 rounded" onclick="closeModal()">Cancel</button>
            <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded ml-2">Delete</button>
        </div>
    </div>
</form>
