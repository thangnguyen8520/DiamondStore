@page "{id}"
@model UserDetailModel
@{
    ViewData["Title"] = "User Details";
}

<h2>User Details</h2>

@if (Model.User != null)
{
    <div>
        <p><strong>Full Name:</strong> @Model.User.FullName</p>
        <p><strong>Address:</strong> @Model.User.Address</p>
        <p><strong>Gender:</strong> @Model.User.Gender</p>
        <p><strong>Last Login:</strong> @Model.User.LastLogin</p>
        <p><strong>Username:</strong> @Model.User.UserName</p>
        <p><strong>Email:</strong> @Model.User.Email</p>
        <p><strong>Status:</strong> @Model.User.Status</p>
    </div>
}
else
{
    <p>User not found.</p>
}
