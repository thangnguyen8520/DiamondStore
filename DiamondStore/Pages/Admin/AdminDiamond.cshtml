@page
@model DiamondStore.Pages.Admin.AdminDiamondModel
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Admin Diamonds";
}

<main class="h-full pb-16 overflow-y-auto">
    <div class="container grid px-6 mx-auto">
        <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
            Diamonds List
        </h2>
        <a href="/Admin/AddDiamond" class="btn btn-primary mb-4">Create New Diamond</a>
        <div class="w-full overflow-hidden rounded-lg shadow-xs">
            <div class="w-full overflow-x-auto">
                <table class="w-full whitespace-no-wrap">
                    <thead>
                        <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
                            <th class="px-4 py-3">Name</th>
                            <th class="px-4 py-3">Price</th>
                            <th class="px-4 py-3">Weight</th>
                            <th class="px-4 py-3">Color</th>
                            <th class="px-4 py-3">Clarity</th>
                            <th class="px-4 py-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
                        @foreach (var diamond in Model.Diamonds)
                        {
                            <tr class="text-gray-700 dark:text-gray-400">
                                <td class="px-4 py-3">
                                    <a href="/Admin/DetailDiamond?id=@diamond.DiamondId" class="text-blue-500 hover:text-blue-700">@diamond.DiamondName</a>
                                </td>
                                <td class="px-4 py-3">@diamond.DiamondPrice.ToString("N0") ₫</td>
                                <td class="px-4 py-3">@diamond.DiamondWeight</td>
                                <td class="px-4 py-3">@diamond.DiamondColorName</td>
                                <td class="px-4 py-3">@diamond.DiamondClarityName</td>
                                <td class="px-4 py-3">
                                    <a href="/Admin/EditDiamond?id=@diamond.DiamondId" class="text-blue-500 hover:text-blue-700">Edit</a>
                                    <a href="/Admin/DeleteDiamond?id=@diamond.DiamondId" class="text-red-500 hover:text-red-700 ml-4">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
