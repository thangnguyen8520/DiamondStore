@page
@model DiamondStore.Pages.Admin.AddJewelryModel
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Add Jewelry";
}

<main class="h-full pb-16 overflow-y-auto">
    <div class="container grid px-6 mx-auto">
        <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
            Add Jewelry
        </h2>
        <form method="post">
            <div class="mb-4">
                <label class="block text-sm">Jewelry Name</label>
                <input type="text" name="Jewelry.JewelryName" class="form-input mt-1 block w-full" />
            </div>
            <div class="mb-4">
                <label class="block text-sm">Jewelry Price</label>
                <input type="number" name="Jewelry.JewelryPrice" class="form-input mt-1 block w-full" />
            </div>
            <div class="mb-4">
                <label class="block text-sm">Labor Cost</label>
                <input type="number" name="Jewelry.LaborCost" class="form-input mt-1 block w-full" />
            </div>
            <div class="mb-4">
                <label class="block text-sm">Material</label>
                <select name="Jewelry.JewelryMaterialId" class="form-select mt-1 block w-full">
                    @foreach (var material in Model.Materials)
                    {
                        <option value="@material.Id">@material.Name</option>
                    }
                </select>
            </div>
            <div class="mb-4">
                <label class="block text-sm">Type</label>
                <select name="Jewelry.JewelryTypeId" class="form-select mt-1 block w-full">
                    @foreach (var type in Model.Types)
                    {
                        <option value="@type.Id">@type.Name</option>
                    }
                </select>
            </div>
            <div class="mb-4">
                <label class="block text-sm">Main Diamond</label>
                <select name="Jewelry.MainDiamondId" class="form-select mt-1 block w-full">
                    @foreach (var diamond in Model.Diamonds)
                    {
                        <option value="@diamond.DiamondId">@diamond.DiamondName</option>
                    }
                </select>
            </div>
            <div class="mb-4">
                <label class="block text-sm">Status</label>
                <input type="text" name="Jewelry.Status" class="form-input mt-1 block w-full" />
            </div>
            <div class="mb-4">
                <button type="submit" class="btn btn-primary">Add Jewelry</button>
            </div>
        </form>
    </div>
</main>
