@page
@model DiamondStore.Pages.Admin.UsersModel
@{
    ViewData["Title"] = "Users";
    Layout = "_LayoutAdmin";
}
<main class="h-full pb-16 overflow-y-auto">
    <div class="container grid px-6 mx-auto">
        <h1 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
            Management User
        </h1>
        <h4 class="mb-4 text-lg font-semibold text-gray-600 dark:text-gray-300">
            Users Info
        </h4>
        <div class="w-full overflow-hidden rounded-lg shadow-xs">
            <div class="w-full overflow-x-auto">
                <table class="w-full whitespace-no-wrap">
                    <thead>
                        <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
                            <th class="px-4 py-3">Image</th>
                            <th class="px-4 py-3">Full Name</th>
                            <th class="px-4 py-3">User Name</th>
                            <th class="px-4 py-3">Email</th>
                            <th class="px-4 py-3">Gender</th>
                            <th class="px-4 py-3">Status</th>
                            <th class="px-4 py-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
                        @foreach (var user in Model.Users)
                        {
                            <tr class="text-gray-700 dark:text-gray-400">
                                <td class="px-4 py-3">
                                    @if (!string.IsNullOrEmpty(user.ImageUrl))
                                    {
                                        <img class="w-8 h-8 rounded-full" src="@user.ImageUrl" alt="User Image" />
                                    }
                                </td>
                                <td class="px-4 py-3">@user.FullName</td>
                                <td class="px-4 py-3">@user.UserName</td>
                                <td class="px-4 py-3">@user.Email</td>
                                <td class="px-4 py-3">@user.Gender</td>
                                <td class="px-4 py-3">@user.Status</td>
                                <td class="px-4 py-3">
                                    <div class="flex items-center space-x-4 text-sm">
                                        <a href="@Url.Page("UserDetail", new { id = user.Id })" class="text-blue-600">Details</a>
                                        <a href="@Url.Page("UserEdit", new { id = user.Id })" class="text-yellow-600">Edit</a>
                                        <a href="javascript:void(0)" class="text-red-600" onclick="deleteUser('@user.Id')">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script type="text/javascript">
        function deleteUser(userId) {
            if (confirm("Are you sure you want to delete this user?")) {
                $.post('@Url.Page("UserDelete")', { id: userId }, function (data) {
                    if (data.success) {
                        alert("User deleted successfully.");
                        location.reload();
                    } else {
                        alert("Failed to delete user.");
                    }
                });
            }
        }
    </script>
}
