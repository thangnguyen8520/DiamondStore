@page
@model DiamondStore.Pages.CartModel
@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "_Layout";
}

<section id="center" class="center_shop">
    <div class="container">
        <div class="row">
            <div class="center_shop_t clearfix">
                <div class="col-sm-6">
                    <div class="center_shop_tl clearfix">
                        <h4 class="mgt">Shopping Cart</h4>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="center_shop_tr text-right clearfix">
                        <h6 class="col_2">You are here: <a href="/">Home</a> / Shopping Cart</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="cart_page" class="clearfix cart">
    <div class="container">
        <div class="row">
            <div class="cart_2 clearfix">
                <div class="col-sm-6">
                    <h3 class="bold col_1 mgt">MY CART</h3>
                </div>
                <div class="col-sm-6">
                    <h5 class="text-right mgt"><a href="#">Continue Shopping</a></h5>
                </div>
            </div>
            <div class="cart_3 clearfix">
                <div class="col-sm-8">
                    <div class="cart_3l clearfix">
                        <h5 class="mgt">PRODUCT</h5>
                    </div>
                    @foreach (var item in Model.CartItems)
                    {
                        <div class="cart_3l1 clearfix">
                            <div class="col-sm-3 space_left">
                                <div class="cart_3l1i clearfix">
                                    <a href="#">
                                        <img src="@(item.Diamond?.Image?.ImageUrl ?? item.Jewelry?.Image?.ImageUrl)" alt="Product Image" class="iw">
                                    </a>
                                </div>
                            </div>
                            <div class="col-sm-9">
                                <div class="cart_3l1i1 clearfix">
                                    <h5 class="mgt">
                                        <a href="#">
                                            @(item.Diamond?.DiamondName ?? item.Jewelry?.JewelryName)
                                        </a>
                                    </h5>
                                    <h4>@(item.Diamond != null ? ((decimal)item.Diamond.DiamondPrice).ToString("C") : ((decimal)item.Jewelry.TotalPrice).ToString("C"))</h4>
                                    <h5>Quantity</h5>
                                </div>
                                <div class="cart_3l1i2 clearfix">
                                    <form method="post">
                                        <div class="input-group number-spinner">
                                            <span class="input-group-btn">
                                                <button class="btn btn-default" data-dir="dwn" formaction="/Cart?handler=Update" formmethod="post" name="cartId" value="@item.CartId" onclick="this.form.submit()"><span class="glyphicon glyphicon-minus"></span></button>
                                            </span>
                                            <input type="text" class="form-control text-center" name="quantity" value="@item.Quantity">
                                            <span class="input-group-btn">
                                                <button class="btn btn-default" data-dir="up" formaction="/Cart?handler=Update" formmethod="post" name="cartId" value="@item.CartId" onclick="this.form.submit()"><span class="glyphicon glyphicon-plus"></span></button>
                                            </span>
                                        </div>
                                        <button class="button_1 mgt" formaction="/Cart?handler=Remove" formmethod="post" name="cartId" value="@item.CartId">REMOVE</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="col-sm-4">
                    <div class="cart_3r clearfix">
                        <h5 class="mgt head_1">SUBTOTAL</h5>
                        <h3 class="text-center">
                            @Model.CartItems.Sum(i => (i.Diamond != null ? (decimal)i.Diamond.DiamondPrice : (decimal)i.Jewelry.TotalPrice) * i.Quantity.GetValueOrDefault()).ToString("C")
                        </h3>
                        <hr>
                        <h6>Additional comments</h6>
                        <textarea class="form-control"></textarea>
                        <h5 class="text-center">
                            <a class="button" href="checkout.html">PROCEED TO CHECKOUT</a>
                        </h5>
                        <br>
                        <h5>GET SHIPPING ESTIMATES</h5>
                        <hr>
                    </div>
                    <div class="cart_3r1 clearfix">
                        <h6>Country</h6>
                        <select class="form-control" id="subject" name="subject">
                            <option>America</option>
                            <option>India</option>
                            <option>England</option>
                            <option>Africa</option>
                        </select><br>
                        <h6>State</h6>
                        <select class="form-control" id="subject" name="subject">
                            <option>Delhi</option>
                            <option>Uttar Pradesh</option>
                            <option>Punjab</option>
                            <option>Madhya Pradesh</option>
                        </select><br>
                        <h6>Postal/Zip Code</h6>
                        <input class="form-control" type="text">
                        <h5 class="text-center"><a class="button_1" href="#">CALCULATE SHIPPING</a></h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            var secondaryNav = $('.cd-secondary-nav'),
                secondaryNavTopPosition = secondaryNav.offset().top;
            $(window).on('scroll', function () {
                if ($(window).scrollTop() > secondaryNavTopPosition) {
                    secondaryNav.addClass('is-fixed');
                } else {
                    secondaryNav.removeClass('is-fixed');
                }
            });
        });

        $(document).on('click', '.number-spinner button', function () {
            var btn = $(this),
                oldValue = btn.closest('.number-spinner').find('input').val().trim(),
                newVal = 0;
            if (btn.attr('data-dir') == 'up') {
                newVal = parseInt(oldValue) + 1;
            } else {
                if (oldValue > 1) {
                    newVal = parseInt(oldValue) - 1;
                } else {
                    newVal = 1;
                }
            }
            btn.closest('.number-spinner').find('input').val(newVal);
        });
    </script>
}
