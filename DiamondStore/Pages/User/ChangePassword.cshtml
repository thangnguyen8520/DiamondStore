@page
@model DiamondStore.Pages.User.ChangePasswordModel
@{
	ViewData["Title"] = "Account Information";
}

<div class="container-fluid mt-4" style="margin-bottom: 15px">
    <div class="row">
        <!-- Left Sidebar with Navigation Buttons -->
        <div class="tab-content pt-3 col-md-3">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="e-navlist e-navlist--active-bg">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link px-2 active" href="/User/UserProfile">
                                    <i class="fa-solid fa-user fa-fw mr-2"></i>
                                    <span>User Profile</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-2" href="#">
                                    <i class="fa-solid fa-file-lines fa-fw mr-2"></i>
                                    <span>Order History</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-2" href="/User/ChangePassword" style="background-color: cadetblue; color: saddlebrown;">
                                    <i class="fa-solid fa-retweet fa-fw mr-2"></i>
                                    <span>Change Password</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-2" href="/Auth/Logout">
                                    <i class="fa-solid fa-arrow-right-from-bracket fa-fw mr-2"></i>
                                    <span>Logout</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Content Area for Account Information -->
        <div class="tab-content pt-3 col-md-8" style="margin-left: 90px;">
            <div class="card">
                <div class="card-body">
                    <div class="e-profile">
                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                <span class="active nav-link">Change Password</span>
                            </li>
                        </ul>
                        <div class="tab-content pt-3">
                            <div class="tab-pane active">
                                <form method="post" class="form" novalidate>
                                    <div class="row">
                                        <div class="col-12 mb-3">
                                            <div style="margin-bottom: 10px" class="col-md-12 mb-2"><strong>To ensure security, please set a password with at least 8 characters</strong></div>
                                            
                                            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                                            {
                                                <div class="col-md-12">
                                                    <div class="alert alert-danger" role="alert">
                                                        @Model.ErrorMessage
                                                    </div>
                                                </div>
                                            }
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label asp-for="ChangePassword.CurrentPassword" class="form-label">Current password</label>
                                                    <input asp-for="ChangePassword.CurrentPassword" class="form-control" type="password" placeholder="••••••••">
                                                    <span asp-validation-for="ChangePassword.CurrentPassword" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label asp-for="ChangePassword.NewPassword" class="form-label">New password</label>
                                                    <input asp-for="ChangePassword.NewPassword" class="form-control" type="password" placeholder="••••••••">
                                                    <span asp-validation-for="ChangePassword.NewPassword" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label asp-for="ChangePassword.ConfirmPassword" class="form-label">Confirm new password</label>
                                                    <input asp-for="ChangePassword.ConfirmPassword" class="form-control" type="password" placeholder="••••••••">
                                                    <span asp-validation-for="ChangePassword.ConfirmPassword" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="">
                                                <div class="col-md-3 d-flex justify-content-start">
                                                    <button class="btn btn-primary" type="submit">Save Changes</button>
                                                </div>
                                                <div class="col-md-3 d-flex justify-content-end" style="margin-left: 350px">
                                                    <a href="/Auth/ForgotPassword" class="btn btn-link" style="display: flex; justify-content: center; align-items: center">Forgot Password</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control {
        font-size: 15px;
    }
</style>